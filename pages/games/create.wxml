<!--pages/games/create.wxml-->
<view class="banner"></view>

<form bindsubmit="Upload">
  <view class="containermain">
  <view class="container">
  <input value="{{userName}}" placeholder="name" name="name"/>
  </view>

  <view class="card">
    <input type="text" value="{{userDescription}}" placeholder="description" name="description"/>
    <!-- <view class="cardpic">
      + click here to add pic
    </view> -->
  </view>

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" name="console">
    <view class="picker">
      当前选择：{{array[index]}}
    </view>
  </picker>

  <button class="btn-ghost" form-type="submit"></button>
</view>
</form>