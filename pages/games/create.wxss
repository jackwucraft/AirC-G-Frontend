  width: 47% !important;
  margin: unset !important;
  border: 4rpx solid #08303D; 
  font-size: 32rpx;
  font-weight: 900;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.destroy-button{
  /* flex-grow: 1;
  flex-shrink: 0; */
