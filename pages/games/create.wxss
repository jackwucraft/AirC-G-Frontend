/* pages/games/create.wxss */
.banner{
  height: 470rpx;
  background-repeat: no-repeat;
  display: flex;
  justify-content: flex-start;
}

.create-container{
  position: fixed;
  top: 0; bottom: 0;
  left: 0; right: 0;
  display: flex;
  flex-direction: column;
  height: 100%;
  /* justify-content: space-between; */
}

.title-card{
  justify-content: flex-start;
  display: flex;
  flex-direction: column;
  position: absolute;
  /* width: 722rpx; */
  height: 166rpx;
  left: 32rpx;
  right: 32rpx;
  top: 400rpx;
  border-radius: 16rpx;
  background-color: white;
  padding: 32rpx;
  box-shadow: 4rpx 4rpx 16rpx rgba(0,0,0,0.4);
}

.title-input{
  border: 1rpx solid black;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 28rpx;
}

.subtitle{
  font-size: 32rpx;
  font-weight: 900;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin-bottom: 16rpx;
}

.des-and-con {
  /* align-self: start;
  justify-self: flex-start; */
  padding: 0rpx 64rpx 0rpx 64rpx;
  /* margin-top: 156rpx; */
  margin-top: 188rpx;
  max-height: 799rpx;
  overflow: scroll;
}

.picker {
  padding: 10rpx 0rpx 10rpx 16rpx;
  border: 1rpx solid black;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.description {
  padding: 10rpx 0rpx 200rpx 16rpx;
  border: 1rpx solid black;
  border-radius: 16rpx;
}