<view class="card-container">
  <view bindtap="goToGame" data-id="{{game.id}}" wx:for="{{games}}" wx:key="index" wx:for-item="game" class="card-trip">
    <image src="{{game.picture_url}}" style="width: 300rpx; height: 200rpx; object-fit: cover;" />
    <view class="card-trip-infos">
      <view>
        <text>{{game.name}}</text>
      </view>
      <text class="card-trip-pricing">${{game.price_per_day}}</text>    
    </view>
  </view>
</view>