<!--pages/games/index.wxml-->
<view class="banner">
  <view class="avatar"><image src="/images/头像.png"/></view>
  <view class="searchbar"></view>
</view>

<view class="test">
  <view class="test-card" bindtap="showPS5">
    <image src="/images/gamer.png"/>
    <view class="test-text">PS5</view>
  </view>
  <view class="test-card" bindtap="showXbox">
    <image src="/images/gamer.png"/>
    <view class="test-text">Xbox</view>
  </view>
  <view class="test-card" bindtap="showSwitch">
    <image src="/images/gamer.png"/>
    <view class="test-text">Switch</view>
  </view>
</view>

<view class="card-container">
  <view bindtap="goToShow" data-id="{{game.id}}" wx:for="{{games}}" wx:key="index" wx:for-item="game" class="card-trip">
    <image src="{{game.picture_url}}" style="width: 300rpx; height: 200rpx; object-fit: cover;" />
    <view class="card-trip-infos">
      <view>
        <text style="padding-left: 10rpx;">{{game.name}}</text>
      </view>
      <text class="card-trip-pricing" >${{game.price_per_day}}</text>    
    </view>
  </view>
</view>