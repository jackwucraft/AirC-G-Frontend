swiper {
  height: 100%;
  width: 100%;
}

.inactive{
  opacity: 20%;
}

.swiper-block {
  height: 100%;
  width: 100%;
  background-size: 100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
  /* display: flex; */
}

.swiper-title{
  margin-top: 40rpx;
  /* padding-top: 16rpx;
  padding-left: 54rpx; */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 900;
  font-size: 40rpx;
  width: 66%;
}

.swiper-des{
  /* padding-top: 16rpx;
  padding-left: 56rpx; */
  margin: 16rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 66%;
}
.swiper-button{
  background-color: #08303D;
  color: white;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 24rpx !important;
  font-weight: bolder;
  margin: unset;
  width: fit-content !important;
  padding: 4rpx 32rpx !important;
}

