/* pages/games/index.wxss */
.banner {
  position: relative;
  width: 100%; 
  height: 200rpx; 
  background-color: #08303D; 
  padding-top: 200rpx;
}

.searchbar {
  position: absolute;
  bottom: 50rpx;
  left: 80rpx;
  width: 600rpx; 
  height: 90rpx; 
  background-color: rgb(207, 205, 205);
  border-radius: 10rpx; 
  margin:auto;
}

.avatar {
  position: absolute;
  left: 20px;
  top: 66px;
  width: 80rpx; 
  height: 80rpx; 
  background-color: rgb(207, 205, 205);
  border-radius: 5rpx;
}

.container {
  width: 120rpx;
  display: inline-block;
  padding: 90rpx;
  margin: 35rpx;
}




.card-container {
  margin: 40rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  
}

.card-trip {
  width: 300rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  border: solid;
  border-radius: 3rpx;
  border-style: groove;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  height: 300rpx;
}

.card-trip .card-trip-infos {
  display: flex;
  justify-content: space-between;
}
