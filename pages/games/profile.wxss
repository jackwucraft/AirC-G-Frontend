.background {
  height: 228px;
  width: 100%;
  filter: blur(11px);
}

.avatar-container {
  position: absolute;
  left: 50%;
  transform:translateX(-50%);
  top: 140rpx;
}

.avatar-container image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100rpx;
}

.name {
  text-align: center;
  width: 100%;
  font-weight: bolder;
  line-height: 38rpx;
  color: white;
  font-size: 14px;
} 

.container {
  margin: 32rpx;
}

.btn-container {
  display: flex;
  width: 100%;
  background: #CED6D8;
  color: white;
  border-radius: 100px;
  height: 90rpx;
  margin: 60rpx 0;
  border: 1px solid #CED6D8;
}

.btn {
  width: 50%;
  /* border: 1px solid #4A4A4A; */
  padding: 8px 24px;
  border-radius: 100px;
  /* font-weight: lighter; */
  transition: opacity 0.3s ease;
  /* width: 180rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.btn:hover {
  opacity: 1;
}

.btn-active {
  background-color: #08303D !important;
  color: white;
}


.card {
  margin-bottom: 68rpx;
  border: 1rpx solid gainsboro;
  border-radius: 16rpx;
  height: 312rpx;
  overflow: hidden;
  box-shadow: 4px 4px 16px rgba(0,0,0,0.2);
}

