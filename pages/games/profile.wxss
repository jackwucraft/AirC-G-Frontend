.text {
  display: flex; 
  justify-content: space-between; 
  align-items: center;
  padding: 16rpx 38rpx;
  font-size: 24rpx;
}

.text1 {
  font-weight: 900;
  font-size: 26rpx;
  font-family: system-ui;
}

.text2 {
  font-size: 20rpx;
}

.input {
  text-align: center;
  color: white;
}