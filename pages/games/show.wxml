<!--pages/games/show.wxml-->
<view class="banner">
</view>
<view class="container">
  <view class="game-card" >
    <view class="middle" style="color: white; font-size: 48rpx; margin:center;">
      {{game.name}}
  </view>
  <image style="border-radius: 16rpx;" class="middle" src="{{game.picture_url}}"/>
  </view>
  <view style="font-size: 32rpx;">
    {{game.description}}
  </view>
  <view style="font-size: 32rpx;">
    <view class="price">
      Price per day ${{game.price_per_day}}    
    </view>
  </view>
  <view class="btns">
    <view class="btn-red" bindtap="goToIndex">back</view>
    <view class="btn" bindtap="createBooking">Book</view>
  </view>
</view>



