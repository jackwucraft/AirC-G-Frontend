/* pages/games/show.wxss */
.container {
  padding: 30rpx 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 200rpx;
  position: fixed;
  justify-content: column;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.game-card .middle{
  margin: 0 auto;
  margin-top: 130rpx
}
.game-card{
  border-radius: 16rpx;
  margin-top: 100rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.btn{
  color: white;
  padding: 24rpx 36rpx;
  border-radius: 12rpx;
  font-weight: bold;
  background-color: #08303D;
  transition: background 0.3s ease;
  width:fit-content;
  margin-bottom: 100rpx;
  margin-right: 50rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.ghost-btn{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  padding: 8px;
  color: #fff;
  border: 1px solid #fff;
  text-align: center;
  outline: none;
  text-decoration: none;
}

.desc{
  position: relative;
  margin: 50rpx 50rpx;
}

.price{
  margin: 50rpx 50rpx;
  font-size: 48rpx;
  font-weight: 900;
}
.flex{
  display: flex;
  justify-content: space-between;
}

.star{
  width: 80rpx;
  height: 80rpx;
  margin-right: 80rpx;
}