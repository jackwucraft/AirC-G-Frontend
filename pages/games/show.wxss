/* pages/games/show.wxss */
.container {
  padding: 30rpx 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 200rpx;
  position: fixed;
  justify-content: column;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.banner {
  position: relative;
  width: 100%; 
  height: 200rpx; 
  background-color: #08303D; 
  padding-top: 200rpx;
}

.container .left{
  padding-left: 32rpx;
  background-color: lightgray;
  border-radius: 16rpx;
  padding-right: 16rpx;
}

.container .right{
  background-color: lightgray;
  border-radius: 16rpx;
  padding: 10rpx;
  /* padding-right: 16rpx; */
}

.container .middle{
  margin: 0 auto;
}
.game-card{
  background-color: khaki;
  border-radius: 16rpx;
}

.btn{
  color: white;
  padding: 24rpx 36rpx;
  border-radius: 8rpx;
  font-weight: bold;
  background: linear-gradient(#0678e2, #053269);
  transition: background 0.3s ease;
  border: 1rpx solid #0678e2;
  width:fit-content;
  /* margin: 0 auto; */
}

.btn-red{
  color: white;
  padding: 24rpx 36rpx;
  border-radius: 8rpx;
  font-weight: bold;
  background: linear-gradient(#ca0b0b, #df2b58);
  transition: background 0.3s ease;
  border: 1rpx solid #ca0b0b;
  width:fit-content;
  margin: 0 auto;
  margin-right: 150rpx;
}

.btns {
  display: flex;
  justify-content: space-between;
}