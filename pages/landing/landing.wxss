/* pages/landing/landing.wxss */
page {
  background-color: rgb(255, 255, 255);
}
.bannerlanding {
  background-image: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,.5) 45%, rgba(0,0,0,0) 100%), url("https://images.unsplash.com/photo-1486572788966-cfd3df1f5b42?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2944&q=80");
  background-size: cover;
  background-position: center;
  position: fixed;
  top: 0; bottom: 0;
  left: 0; right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 150rpx;
}

.title {
  margin-bottom: 21rpx;
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  font-style: italic;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}